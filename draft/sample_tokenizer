#include "pipex.h"

void	free_matrix(char ***array)
{
	int	i;

	if (!array || !*array)
		return ;
	i = 0;
	while ((*array)[i])
	{
		free((*array)[i]);
		i++;
	}
	free(*array);
	*array = NULL;
}

static void	skip_spaces(char *s, int *i)
{
	while (s[*i] && s[*i] == ' ')
		(*i)++;
}

static int	token_length(char *s, int start, t_parse_error *err)
{
	int	len;
	int	i;

	len = 0;
	i = start;
	if (s[i] == '\'')
	{
		i++;
		while (s[i] && s[i] != '\'')
		{
			len++;
			i++;
		}
		if (s[i] != '\'')
			return (*err = PARSE_UNCLOSED_QUOTE, -1);
	}
	else
	{
		while (s[i] && s[i] != ' ')
		{
			len++;
			i++;
		}
	}
	return (len);
}

static char	*extract_token(char *s, int *i, t_parse_error *err)
{
	int		len;
	int		j;
	char	*token;

	len = token_length(s, *i, err);
	if (*err != PARSE_OK || len < 0)
		return (NULL);
	token = malloc(len + 1);
	if (!token)
		return (*err = PARSE_MALLOC_FAIL, NULL);
	j = 0;
	if (s[*i] == '\'')
	{
		(*i)++;
		while (s[*i] && s[*i] != '\'')
			token[j++] = s[(*i)++];
		(*i)++;
	}
	else
	{
		while (s[*i] && s[*i] != ' ')
			token[j++] = s[(*i)++];
	}
	token[j] = '\0';
	return (token);
}

static int	count_tokens(char *s, t_parse_error *err)
{
	int	i;
	int	count;

	i = 0;
	count = 0;
	while (s[i])
	{
		skip_spaces(s, &i);
		if (!s[i])
			break ;
		if (token_length(s, i, err) < 0)
			return (-1);
		count++;
		if (s[i] == '\'')
		{
			i++;
			while (s[i] && s[i] != '\'')
				i++;
			i++;
		}
		else
			while (s[i] && s[i] != ' ')
				i++;
	}
	return (count);
}

char	**parse_command(char *input, t_parse_error *err)
{
	char	**tokens;
	int		count;
	int		i;
	int		index;

	*err = PARSE_OK;
	count = count_tokens(input, err);
	if (*err != PARSE_OK || count < 0)
		return (NULL);
	tokens = malloc(sizeof(char *) * (count + 1));
	if (!tokens)
		return (*err = PARSE_MALLOC_FAIL, NULL);
	i = 0;
	index = 0;
	while (i < count)
	{
		skip_spaces(input, &index);
		tokens[i] = extract_token(input, &index, err);
		if (*err != PARSE_OK)
			return (free_matrix(&tokens), NULL);
		i++;
	}
	tokens[i] = NULL;
	return (tokens);
}
